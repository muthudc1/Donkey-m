<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".signupActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >




    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="49dp"
        android:layout_height="55dp"
        android:src="@mipmap/ic_launcher"
        android:layout_marginStart="32dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/imageView3">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="sign up"
            android:textColor="@color/black_color"
            android:textSize="@dimen/_32ssp"
            android:layout_marginLeft="20dp"
           />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_a_new_account"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black_color"  />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_290sdp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/linear1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/name_must"
            android:textSize="@dimen/_16ssp"
            android:layout_marginTop="@dimen/_10ssp"
            android:textColor="@color/black_color"
            android:layout_marginLeft="20dp"
            />

       <androidx.cardview.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="@dimen/_32sdp"
           android:background="@color/white"
           app:cardCornerRadius="@dimen/_15ssp"
           app:cardBackgroundColor="@color/white"
           android:layout_marginTop="@dimen/_10ssp"
           android:layout_marginLeft="@dimen/_14ssp"
           android:layout_marginRight="@dimen/_14ssp">

           <EditText
               android:id="@+id/idName"
               android:layout_width="match_parent"
               android:layout_height="@dimen/_32sdp"
               android:background="@color/transparent"
               android:textColor="@color/black_color"
               android:layout_marginStart="@dimen/_10ssp"
               android:layout_marginTop="@dimen/_5sdp"
               />

       </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/email_id_must"
            android:textSize="@dimen/_16ssp"
            android:textColor="@color/black_color"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="@dimen/_5sdp"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_32sdp"
            android:background="@color/white"
            app:cardCornerRadius="@dimen/_15ssp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginTop="@dimen/_10ssp"
            android:layout_marginLeft="@dimen/_14ssp"
            android:layout_marginRight="@dimen/_14ssp">

            <EditText
                android:id="@+id/idemail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_32sdp"
                android:background="@color/transparent"
                android:textColor="@color/black_color"
                android:layout_marginStart="@dimen/_10ssp"
                />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/phone_number_must"
            android:textSize="@dimen/_16ssp"
            android:textColor="@color/black_color"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="@dimen/_5sdp"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_32sdp"
            android:background="@color/white"
            app:cardCornerRadius="@dimen/_15ssp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginTop="@dimen/_10ssp"
            android:layout_marginLeft="@dimen/_14ssp"
            android:layout_marginRight="@dimen/_14ssp">

        <EditText
            android:id="@+id/idphone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_32sdp"
            android:background="@color/transparent"
            android:textColor="@color/black_color"
            android:layout_marginStart="@dimen/_10ssp"
            />
        </androidx.cardview.widget.CardView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/password_must"
            android:textSize="@dimen/_16ssp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black_color"
            android:layout_marginTop="@dimen/_5sdp"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_32sdp"
            android:background="@color/white"
            app:cardCornerRadius="@dimen/_15ssp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginTop="@dimen/_10ssp"
            android:layout_marginLeft="@dimen/_14ssp"
            android:layout_marginRight="@dimen/_14ssp">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            app:passwordToggleEnabled="true"
            app:hintEnabled="false"
            android:background="@color/white"
            android:textColorHint="@color/hint_color"
            app:boxStrokeColor="@color/black"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:hintTextColor="@color/black"
            >

            <EditText
                android:id="@+id/idPassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_5ssp"
                android:inputType="textPassword"
                android:maxLength="8"
                android:paddingTop="@dimen/_6sdp"
                android:background="#00000000"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold" />

        </com.google.android.material.textfield.TextInputLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>

    <LinearLayout
        android:id="@+id/linear3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/linear2">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_32sdp"
            android:background="@color/white"
            app:cardCornerRadius="@dimen/_15ssp"
            app:cardBackgroundColor="@color/purple_500"
            android:layout_marginLeft="@dimen/_14ssp"
            android:layout_marginRight="@dimen/_14ssp">

            <TextView
                android:id="@+id/signup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/purple_500"
                android:text="sign up"
                android:textAlignment="center"
                android:textSize="@dimen/_20ssp"
                android:layout_margin="@dimen/_2ssp"
                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="@color/black_color" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@+id/linear3">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/privacy_and_tc_text_signup"
            android:textColorLink="@color/black_color"
            android:lineHeight="@dimen/_16ssp"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/_9sdp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/linear4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/already_have_an_account"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/_9sdp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/signin"
            android:textStyle="bold"
            android:textColor="@color/black_color"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/_9sdp"/>
    </LinearLayout>

    </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
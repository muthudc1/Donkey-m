<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/historyCardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_20ssp"
    android:layout_marginBottom="@dimen/_20ssp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#F6F6F6"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            android:layout_marginLeft="@dimen/_15ssp"
            android:layout_marginRight="@dimen/_15ssp"
            android:layout_marginTop="@dimen/_5ssp"
            >

            <ImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/_22sdp"
                android:layout_weight="1"
                android:src="@drawable/starting_point"
                />

            <TextView
                android:id="@+id/pickupLocation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/starting_point"
                android:layout_gravity="center"
                android:layout_weight="9"
                android:singleLine="true"
                android:layout_marginStart="@dimen/_10ssp"
                android:textSize="@dimen/_11ssp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            android:layout_marginLeft="@dimen/_15ssp"
            android:layout_marginRight="@dimen/_15ssp"
            android:layout_marginTop="@dimen/_8ssp"
            android:layout_marginBottom="@dimen/_10ssp"
            >

            <ImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/_22sdp"
                android:layout_weight="1"
                android:src="@drawable/destination_icon"
                />

            <TextView
                android:id="@+id/dropOffLocation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/destination_point"
                android:layout_weight="9"
                android:singleLine="true"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_10ssp"
                android:textSize="@dimen/_11ssp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:orientation="horizontal"
            android:background="@color/white_color"
            >

            <ImageView
                android:id="@+id/title_Image"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:src="@drawable/elipse"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_12ssp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_10ssp"
                >

                <TextView
                    android:id="@+id/driverName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/customer_name"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/_13ssp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rating"
                    android:layout_marginTop="@dimen/_3ssp"
                    android:textColor="@color/hint_color"
                    android:textStyle="bold"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_gravity="center"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginEnd="@dimen/_15ssp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/price"
                        android:layout_gravity="center"
                        android:textColor="@color/hint_color"
                        android:textStyle="bold"
                        android:textSize="@dimen/_12ssp"/>

                    <TextView
                        android:id="@+id/tripPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â‚¹9.00"
                        android:textSize="@dimen/_13ssp"
                        android:textColor="@color/black_color"
                 />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white_color"
            android:weightSum="2"
            android:paddingBottom="@dimen/_5sdp"
            >

        <TextView
            android:id="@+id/bookingCategory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="@dimen/_15sdp"
            android:text="Category"
            android:layout_gravity="center"
            android:textSize="@dimen/_10ssp"
            android:textColor="@color/black_color"
        />

        <TextView
            android:id="@+id/bookingStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Booking Status"
            android:background="@color/white_color"
            android:paddingTop="@dimen/_4sdp"
            android:singleLine="true"
            android:layout_gravity="center"
            android:textColor="@color/black_color"
            android:textSize="@dimen/_9ssp"
            android:paddingEnd="@dimen/_15sdp"
            android:gravity="center|end"
            />

        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>